<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
          android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#5d707f">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="4dp"
        card_view:cardBackgroundColor="#376080"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center|center_vertical"
        android:focusable="true"
        android:foregroundGravity="center|center_vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|center_vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ffff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="@string/preferences"/>
        </LinearLayout>



    </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="4dp"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:onClick="launchAccesibility">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="74dp"
                    android:layout_gravity="center|top"
                    android:scaleType="fitXY"
                    android:src="@drawable/accesibility_icon"
                    android:contentDescription="@string/description_Main_Photo"
                    android:cropToPadding="false"
                    android:layout_height="74dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:orientation="vertical"
                   android:background="#7f8099">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/accessibility"
                       android:gravity="center"
                       android:textSize="30dp"
                       android:textColor="#ffff"
                       android:textStyle="bold"
                       android:layout_weight="0.5"/>

               </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="4dp"
            card_view:cardBackgroundColor="@color/cardview_light_background"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:onClick="launchLanguageActivity">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="74dp"
                    android:layout_gravity="center|top"
                    android:scaleType="fitXY"
                    android:src="@drawable/idiomas"
                    android:contentDescription="@string/description_Main_Photo"
                    android:cropToPadding="false"
                    android:layout_height="74dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:background="#7f8099">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/language"
                        android:gravity="center"
                        android:textSize="30dp"
                        android:textColor="#ffff"
                        android:textStyle="bold"
                        android:layout_weight="0.5"/>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="4dp"
            card_view:cardBackgroundColor="@color/cardview_light_background"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:onClick="launchInstructionsActivity">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/fotoMain3"
                    android:layout_width="74dp"
                    android:layout_gravity="center|top"
                    android:scaleType="fitXY"
                    android:src="@drawable/instructions"
                    android:contentDescription="@string/description_Main_Photo"
                    android:cropToPadding="false"
                    android:layout_height="74dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:background="#7f8099">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/instruction_title"
                        android:gravity="center"
                        android:textSize="30dp"
                        android:textColor="#ffff"
                        android:textStyle="bold"
                        android:layout_weight="0.5"/>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        </LinearLayout>
